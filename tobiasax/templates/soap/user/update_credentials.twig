{% extends 'tobiasax/templates/soap/_wsa_envelope' %}

{% block body_content %}
  <cus:UpdateLoginCredentials>
    <cus:oldCredentials>
      <sg:Password>{{ currentPassword }}</sg:Password>
      <sg:Username>{{ currentUsername }}</sg:Username>
    </cus:oldCredentials>
    <cus:newCredentials>
      <sg:Password>{{ newPassword }}</sg:Password>
      <sg:Username>{{ newUsername }}</sg:Username>
    </cus:newCredentials>
    <cus:companyId>{{ companyId }}</cus:companyId>
  </cus:UpdateLoginCredentials>
{% endblock %}
