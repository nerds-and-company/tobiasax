{% extends 'tobiasax/templates/soap/_wsa_envelope' %}

{% block body_content %}
  <cus:ChangePasswordByTemporaryPassword>
    <cus:tempCredentials>
      <sg:Password>{{ tempPassword }}</sg:Password>
      <sg:Username>{{ tempUsername | default(username) }}</sg:Username>
    </cus:tempCredentials>
    <cus:newCredentials>
      <sg:Password>{{ password }}</sg:Password>
      <sg:Username>{{ username }}</sg:Username>
    </cus:newCredentials>
    <cus:companyId>{{ companyId }}</cus:companyId>
  </cus:ChangePasswordByTemporaryPassword>
{% endblock %}
